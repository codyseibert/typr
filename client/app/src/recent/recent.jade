div(
  layout="column"
)
  h1 Recent Snippits

  div(
    layout-wrap
    layout="row"
  )
    .fade(
      flex="33"
      ng-repeat="snippit in snippits | where : {language: filter}"  
      style="min-width: 415px;"
    )
      md-card
        md-card-title
          md-card-title-text
            span.md-headline.md-fg-primary {{snippit.name}} ({{snippit.language}})
            span.md-subhead
              span Average WPM: 124
              br
              span Best WPM: 80
        md-card-actions(
          layout="row"
          layout-align="end center"
        )
          md-button.btn-primary(
            ng-click="openSnippit(snippit)"
          ) 
            md-icon(
              md-font-library="material-icons"
            ) play_arrow
            | Practice
